{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Tailwind Watcher",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/Workout"
      },
      "command": ["tailwindcss -i Styles/app.css -o wwwroot/css/app.css -w"],
      "presentation": {
        "reveal": "silent",
        "panel": "new"
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "problemMatcher": []
    }
  ]
}
